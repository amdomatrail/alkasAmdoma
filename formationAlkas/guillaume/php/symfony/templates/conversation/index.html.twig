{% extends 'base.html.twig' %}

{% block title %}Conversation index{% endblock %}

{% block body %}
    <h1>Conversation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Termine</th>
                <th>Date_creation</th>
                <th>Date_modification</th>
                <th>Titre</th>
                <th>actions</th>
                <th>Messages</th>
            </tr>
        </thead>
        <tbody>
        {% for conversation in conversations %}
            <tr>
                <td>{{ conversation.id }}</td>
                <td>{{ conversation.termine ? 'Yes' : 'No' }}</td>
                <td>{{ conversation.dateCreation ? conversation.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ conversation.dateModification ? conversation.dateModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ conversation.titre }}</td>



                <td>
                    <a href="{{ path('app_conversation_show', {'id': conversation.id}) }}">show</a>
                    <a href="{{ path('app_conversation_edit', {'id': conversation.id}) }}">edit</a>
                </td>
                <td>
                <a href="{{ path('app_conversation_message', {'slug': conversation.slug}) }}">message</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conversation_new') }}">Create new</a>
{% endblock %}
